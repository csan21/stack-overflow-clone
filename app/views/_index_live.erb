<div id="questions-homepage">
  <% @posts.each do |post| %>
  <div class="row questions-home">
    <div class="col-md-3">
      <div class="votes-home">
        <%= post.votes.count %>
        <% if post.votes.count == 1%>
          <span class="votes-home-text">vote</span>
        <% else %>
        <span class="votes-home-text">votes</span>
        <% end %>
      </div>
      |
      <div class="answers-home">
        <%= post.comments.count %>
        <span class="answers-home-text">answers</span>
      </div>
       |
       <div class="answers-home">
         <%= post.post_views %>
         <% if post.post_views == 1 %>
          <span class="answers-home-text">view</span>
         <% else %>
          <span class="answers-home-text">views</span>
         <% end %>
       </div>
    </div>
    <div class="col-md-9 questions-title">
      <a href="/categories/<%= post.category_id %>/posts/<%= post.id %>"><%= post.title %></a>
      <span class="post-date-home">posted: 2 days ago</span>
      |
      <span class="author-home"><a href="/profile/<%= post.author.id %>">author: <%= post.author.username %></a></span>
    </div>
  </div>
  <% end %>
</div>
