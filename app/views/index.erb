<div class="container">
  <div   class="dropdown">
    <button id="dLabel" class="btn btn-default" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Language
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dLabel">
      <li><a href="">AJAX</a></li>
      <li><a href="">Angular</a></li>
      <li><a href="">CSS</a></li>
      <li><a href="">C++</a></li>
      <li><a href="">C#</a></li>
      <li><a href="">HTML</a></li>
      <li><a href="">Java</a></li>
      <li><a href="">Javascript</a></li>
      <li><a href="">Node.js</a></li>
      <li><a href="">PHP</a></li>
      <li><a href="">Python</a></li>
      <li><a href="">React</a></li>
      <li><a href="">Ruby</a></li>
      <li><a href="">Ruby on Rails</a></li>
      <li><a href="">SQL</a></li>
      <li><a href="">Swift</a></li>
    </ul>
    <div class="filters">
      <a href="">trending</a> | <a href="">new</a> | <a href="">week</a>
    </div>
  </div>

  <div class="row">&nbsp;</div>


    <% @posts.each do |post| %>
    <div class="row questions-home">
      <div class="col-md-3">
        <div class="votes-home">
          <%= post.votes.count %>
          <% if post.votes.count == 1%>
            <span class="votes-home-text">vote</span>
          <% else %>
          <span class="votes-home-text">votes</span>
          <% end %>
        </div>
        |
        <div class="answers-home">
          <%= post.comments.count %>
          <span class="answers-home-text">answers</span>
        </div>
         |
         <div class="answers-home">
           <%= post.view_count %>
           <% if post.view_count == 1 %>
            <span class="answers-home-text">view</span>
           <% else %>
            <span class="answers-home-text">views</span>
           <% end %>
         </div>
      </div>
      <div class="col-md-9 questions-title">
        <a href="/categories/<%= post.category_id %>/posts/<%= post.id %>"><%= post.title %></a>
        <span class="post-date-home">posted: 2 days ago</span>
      </div>
    </div>
    <% end %>
</div>
